{
  "manifest_version": 3,
  "name": "Manhwa Tracker (Debug)",
  "version": "1.0.0",
  "description": "Track manhwa chapters while reading. Includes debug logging.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Manhwa Tracker",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
