{
  "manifest_version": 3,
  "name": "Manhwa Chapter Tracker",
  "version": "1.0",
  "description": "Automatically track and return to the last chapter you read for each manhwa.",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Manhwa Tracker"
  }
}
